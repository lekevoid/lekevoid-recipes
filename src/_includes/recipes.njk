---
layout: default
prism: true
---

<div class="container max-w-4xl mt-6  px-6">
    <div class="py-5">
        <h1 class="font-bold text-5xl">{{title}}</h1>
    </div>
	<img src="{{feature_image}}" class="mb-8 h-96 w-full object-cover" style="max-height:50vw;" />
	<div class="card mb-12">
		<div class="card-body">
			<h2>Ingredients</h2>
			<ul class="pl-4">
				{% for ingredient in ingredients %}
					<li class="leading-loose">
						{% if ingredient.measure != "some" %}
							{{ ingredient.quantity | safe }}
						{% endif %}
						{% if ingredient.measure != "whole" %}
							{{ ingredient.measure | safe }}
						{% endif %}
						{{ ingredient.name | safe }}
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="card">
		<div class="card-body">
			<article class="prose lg:prose-xl my-4 mx-auto">
				<h2>Preparation</h2>
				{{ content | safe }}
			</article>
		</div>
	</div>
</div>
